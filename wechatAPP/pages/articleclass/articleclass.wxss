/* pages/articleclass/articleclass.wxss */
.navbar {
    position: fixed; 
    top: 0;
     z-index: 4;   
    border-bottom: 1px solid #ececec;
    height: 80rpx; 
    font-size: 34rpx;
    white-space: nowrap;
    background-color: #f5f6f7;
}
.navbar-item {
    display: inline-block;  
    vertical-align: middle;
    margin-right: 20rpx; 
    height: 100%;
}
.navbar-item-active {
    font-size: 38rpx;
    color: #720808;
}
.navbar-item-wrap {
    display: flex; 
    width: 100%;
    height: 100%;
    align-items: center;    
    justify-content: center; 
}

/* 文章列表 */
.nav_section{
    width:100%;
    margin-top: 80rpx;
}
.nav_section_items{
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    padding:5rpx 10rpx;
    border-bottom:2rpx solid #ddd;
    position: relative; 
}
.nav_section_items:active{
    background:#ddd;
}
.nav_section_items .section_image{
    /* width:170rpx;
    height:158rpx; */
    width: 127.5rpx;
    height: 118.5rpx;
    /* margin: auto; */
    margin: auto 10rpx;

}
.nav_section_items .section_image image{
    width:100%;
    height:100%;
    border-radius: 12px;
    
}
.nav_section_items .section_cont{
    width:480rpx;
    font-size:26rpx;
    color:#a9a9a9;
    
}
.nav_section_items .section_cont view{
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    display: block;
}
.nav_section_items .section_cont image{
    width:30rpx;
    height:30rpx;
}
.nav_section_items .section_cont .section_cont_intro{
    white-space:normal;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.nav_section_items .section_cont .section_cont_sub{
    font-size: 32rpx;
    line-height:60rpx;
    color:#000;
    margin-bottom:10rpx;
}
.nav_section_items .section_cont .section_cont_price{
    font-size:26rpx;
    color:#a9a9a9;
}
.nav_section_items .section_book{
    width:80rpx;
    height:80rpx;
    font-size:26rpx;
    border-radius:100%;
    background:#d24a58;
    line-height: 80rpx;
    color:#fff;
    text-align: center;
    margin-top:35rpx;
}